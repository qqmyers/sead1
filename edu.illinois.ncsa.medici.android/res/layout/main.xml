<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<TextView android:text="Tumblr Poster" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/dummyText"></TextView>
	<Button android:layout_height="wrap_content" android:id="@+id/preferencesButton"
		android:text="Preferences" android:layout_width="fill_parent"></Button>
	<Button android:layout_height="wrap_content" android:id="@+id/mainPostButton"
		android:text="Choose Image ..." android:layout_width="fill_parent"></Button>
	
	
	<ImageView android:id="@+id/ImageView01"
		android:layout_width="fill_parent" android:layout_height="fill_parent" android:src="@drawable/icon" android:scaleType="center" android:layout_gravity="center_vertical|center_horizontal"></ImageView>

</LinearLayout>
